<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="stylesheet" href="style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fundo server</title>
  </head>
  <body>
    <nav>
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/create">Create Blog</a>
    </nav>
    <main class="content">
      <h2>All Blogs</h2>
      <div class="container">
        <% blog.map((e) => { %>
        <a href="/blog/ <% blog._id %> " class="blogs link">
          <h2><%= e.title %></h2>
          <p><%= e.snippet %></p>
          <p><%= e.body %></p>
        </a>
        <% }) %>
      </div>
    </main>
  </body>
</html>
