<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="stylesheet" href="style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fundo server</title>
  </head>
  <body>
    <nav>
      <a class="a" href="/">Home</a>
      <a class="a" href="/about">About</a>
      <a class="a" href="/create">Create Blog</a>
    </nav>
    <main class="content">
      <h2>All Blogs</h2>
      <div class="blog2 container">
        <% blog.map((e) => { %>
        <a href="/blogs/<%= e._id %> ">
          <div class="blog1">
            <h2><%= e.title %></h2>
            <p><%= e.snippet %></p>
            <p><%= e.body %></p>
          </div>
        </a>
        <% }) %>
      </div>
    </main>
  </body>
</html>
